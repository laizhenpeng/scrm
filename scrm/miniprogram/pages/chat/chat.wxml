<!--miniprogram/pages/chat/chat.wxml-->
<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
	<view slot="backText">返回</view>
	<view slot="content">聊天</view>
</cu-custom>

<view class="cu-chat" id="chat">
	<view wx:for="{{messages}}" wx:key="index">
		<view wx:if="{{item.direction=='to'}}" class="cu-item self">
			<view class="main">
				<view class="content bg-green shadow">
					<text>{{item.content}}</text>
				</view>
			</view>
			<view class="cu-avatar radius" style="background-image:url({{item.avatarUrl}})"></view>
			<view class="date">{{item.time}}</view>
		</view>
		<view wx:else class="cu-item">
			<view class="cu-avatar radius" style="background-image:url({{item.other_avatarUrl}})"></view>
			<view class="main">
				<view class="content shadow">
					<text>{{item.content}}</text>
				</view>
			</view>
			<view class="date">{{item.time}}</view>
		</view>
	</view>
</view>
<text>\n</text>
<view class="cu-bar foot input">
	<view class="action">
    <text class="cuIcon-right text-grey"></text>
  </view>
  <input class="solid-bottom" bindfocus="InputFocus" bindblur="InputBlur" adjust-position="{{false}}" focus="{{false}}" maxlength="100" cursor-spacing="10" bindinput="contentInput" value="{{content}}"></input>
  <button class="cu-btn bg-green shadow" style="width:50px" bindtap="sendBtn">发送</button>
</view>