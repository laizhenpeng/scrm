<!--miniprogram/pages/index/index.wxml-->
<cu-custom bgColor="bg-gradual-blue">
	<view slot="content">首页</view>
</cu-custom>
<!-- Todo： 名片模板 -->
<view class="padding-lr bg-white">
	<view class="solid-bottom padding">
    	<view class="cu-avatar round lg margin-left" style="background-image:url({{userInfo.avatarUrl}});">
    </view>
    <text class="text-xl margin-left-xl">{{userInfo.nickName}}</text>
  </view>
  <view class="padding-lr">
    <view class="flex">
		<view class="flex-sub padding-sm margin-xs radius">{{userInfo.province}}</view>
		<view class="flex-sub padding-sm margin-xs radius">{{userInfo.city}}</view>
    </view>
    <view class="flex padding-lr padding-bottom">
		<view class="flex-sub radius">{{userInfo.language}}</view>
    </view>
  </view>
</view>

<view class="cu-list grid col-2 margin-top">
	<view class="cu-item" wx:for="{{indexDataList}}" wx:key="index">
		<view class="value">{{item.value}}</view>
		<view class="label">{{item.label}}</view>
	</view>
</view>

<view class="cu-list grid col-3">
	<view class="cu-item">
		<navigator bindtap="viewInfo" url="/pages/view/view">
			<view class="cuIcon-cu-image">
				<image class="icon" src="{{functions[0].icon}}"></image>
			</view>
			<view class="label">{{functions[0].label}}</view>
		</navigator>
	</view>
	<view class="cu-item">
		<navigator bindtap="editInfo" url="/pages/edit/edit">
			<view class="cuIcon-cu-image">
				<image class="icon" src="{{functions[1].icon}}"></image>
			</view>
			<view class="label">{{functions[1].label}}</view>
		</navigator>
	</view>
	<view class="cu-item">
		<navigator bindtap="chooseCard" url="/pages/card/card">
			<view class="cuIcon-cu-image">
				<image class="icon" src="{{functions[2].icon}}"></image>
			</view>
			<view class="label">{{functions[2].label}}</view>
		</navigator>
	</view>
	<view class="cu-item">
		<navigator bindtap="scan" url="">
			<view class="cuIcon-cu-image">
				<image class="icon" src="{{functions[3].icon}}"></image>
			</view>
			<view class="label">{{functions[3].label}}</view>
		</navigator>
	</view>
	<view class="cu-item">
		<navigator bindtap="share" url="">
			<view class="cuIcon-cu-image">
				<image class="icon" src="{{functions[4].icon}}"></image>
			</view>
			<view class="label">{{functions[4].label}}</view>
		</navigator>
	</view>
</view>